doctype html

html(lang="en")
	head
		// Found a bug? Email me at kvchen@berkeley.edu for your cookies :)

		title="Hog Strategy Visualizer (Alpha!)"
		meta(name="theme-color" content="#db5945")

		!= css("normalize")
		!= css("skeleton")
		!= css("nprogress")
		!= css("codemirror")
		!= css("visualize")

		link(href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css")
		link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' rel='stylesheet' type='text/css')
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css")

	body
		div(class="app-container")
			div(class="row page-header u-full-width")
				div(class="side-spacer")
					h1 #[i(class="fa fa-icon fa-simplybuilt fa-inverse")] hog.#[b visualize (alpha!)]

			div(class="row" style="position: relative;")
				div(class="five columns")
					textarea(id="code", name="code")
				div(class="seven columns")
					div(id="moveset-grid")

	footer
		script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/d3/3.5.3/d3.min.js")
		!= js("nprogress")
		!= js("codemirror")
		!= js("python/python")
		!= js("grid")
		!= js("visualize")
		!= js("analytics")