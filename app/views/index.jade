doctype html

html(lang="en")
  head
    title="Hog Winrate Calculator"
    != css("normalize")
    != css("skeleton")
    != css("nprogress")
    != css("codemirror")
    != css("style")

    link(href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css")
    

  body
    div(class="app-container")
      div(class="page-header")
        h1 >>> hog.#[i winrate]

      div(class="row")
        div(class="eight columns code-container")
          textarea(id="code", name="code")

        div(class="four columns")
          div(id="output-container")
            h1(id="winrate") 0.00%
            p(id="unhelpfulMessage") 1) Paste your code <br>2) Check the winrate!

          input(class="button-primary u-full-width" id="getWinrate" type="button" value="Calculate Winrate")

  footer
    script(src="//ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js")
    != js("nprogress")
    != js("codemirror")
    != js("python/python")
    != js("countUp.min")
    != js("client")